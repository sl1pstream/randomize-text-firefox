{
  "manifest_version": 2,
  "name": "Floorp Randomize Extension",
  "version": "1.0",
  "description": "Randomizes selected text into a nonsensical string with a blur effect.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["src/content.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles/blur.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}